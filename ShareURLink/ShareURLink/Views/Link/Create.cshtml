@model ShareURLink.Models.LinkModel

@{
    ViewData["Title"] = "Create";
}

<h4>Add new linke</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Link" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label"></label>
                <input asp-for="@Model.Title" class="form-control" placeholder="Title" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LinkURL" class="control-label"></label>
                <input asp-for="@Model.LinkURL" class="form-control" placeholder="URL" />
                <span asp-validation-for="@Model.LinkURL" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

